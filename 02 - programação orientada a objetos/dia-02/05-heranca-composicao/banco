using System;

namespace SistemasdeEntregas
{
    class App
    {
        static void Main()
        {
           
        }
    }

    class Entrega
    {
        int numeroPedido;
        double peso;

         public Entrega() {}
         public Entrega(int numeroPedido, double peso) {
            this.numeroPedido = numeroPedido;
            this.peso = peso;
            }

        public virtual void CalcularFrete()
        {
         
        }





    }

    class EntregaEconomica : Entrega
    {
        public EntregaEconomica(){}
        public EntregaEconomica(int numeroPedido, double peso) {
        
            
            CalcularFrete();

            double total = peso * 5;

            return;

        }
    }

    class EntregaExpressa : Entrega
    {
        string origem;
        string destino;

        public EntregaExpressa() {}
        public EntregaExpressa(string origem, string destino, int numeroPedido, double peso) {
            this.origem = origem;
            this.destino = destino;

            CalcularFrete();
            double totalExpressa = peso * 7;

            if (origem != destino)
            {
                totalExpressa += 10;

                return;
            }
            
        }
    } 

    class EntregaInternacional : Entrega
    {

        string origem;
        string destino;

        public EntregaInternacional() { }
        public EntregaInternacional(string origem, string destino, int numeroPedido, double peso)
        {
            this.origem = origem;
            this.destino = destino;

            CalcularFrete();

            double totalInternacional = peso * 12;

            if (origem && destino == EUA)
            {
                totalInternacional += 40;

            } else if (origem != destino)
            {
                totalInternacional += 20;
            }

            return;


        }



    }
}
